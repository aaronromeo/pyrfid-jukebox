defaults.bluealsa.interface "hci0"  # Your Bluetooth adapter
defaults.bluealsa.device "EB:06:EF:22:D2:CB"  # Your Bluetooth device address
defaults.bluealsa.profile "a2dp"
defaults.bluealsa.delay 10000

pcm.!default {
    type plug
    slave.pcm {
        type bluealsa
        device "EB:06:EF:22:D2:CB"
        profile "a2dp"
    }
}

ctl.!default {
    type bluealsa
}
